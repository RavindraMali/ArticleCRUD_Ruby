<h2>Add New Comment/h2>
<%= render 'comments/form' %>
<h2>Article Comments</h2>
            
<table border="1px">
    <thead>
        <tr>
            <td>Sr.No<% srno=1 %></td>
            <td>Commenter</td>
            <td>Body</td>
            <td>Created At</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= srno %><% srno+=1 %></td>
                <td><%= comment.commenter %></td>
                <td><%= comment.body %></td>
                <td><%= comment.created_at %></td>
                <td>  
                </td>
            </tr>
        <% end %>
    </tbody>
</table>